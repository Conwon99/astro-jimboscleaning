---
import Layout from '@/layouts/Layout.astro';
import CleanersCategory from './CleanersCategory';
import { Toaster } from '@/components/ui/toaster';
import { Toaster as Sonner } from '@/components/ui/sonner';
import { TooltipProvider } from '@/components/ui/tooltip';

export async function getStaticPaths() {
  const cities = ['irvine', 'ayr', 'kilmarnock', 'troon', 'prestwick'];
  
  return cities.map((city) => ({
    params: { city },
  }));
}

const { city } = Astro.params;

// Capitalize first letter of city
const cityCapitalized = city ? city.charAt(0).toUpperCase() + city.slice(1) : '';

const title = `Cleaners ${cityCapitalized} | Professional Cleaning Services | Jimbo's Exterior Cleaning`;
const description = `Professional cleaning services in ${cityCapitalized}, Ayrshire. Expert interior and exterior window cleaning, driveway cleaning, and window cleaning services.`;
const canonical = `/categories/cleaners/${city}`;
---

<Layout 
  title={title}
  description={description}
  canonical={canonical}
>
  <TooltipProvider client:load>
    <Toaster client:load />
    <Sonner client:load />
    <CleanersCategory city={cityCapitalized} client:load />
  </TooltipProvider>
</Layout>


