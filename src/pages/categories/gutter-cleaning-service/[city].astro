---
import Layout from '@/layouts/Layout.astro';
import GutterCleaningServiceCategory from './GutterCleaningServiceCategory';
import { Toaster } from '@/components/ui/toaster';
import { Toaster as Sonner } from '@/components/ui/sonner';
import { TooltipProvider } from '@/components/ui/tooltip';

export async function getStaticPaths() {
  const cities = ['irvine', 'ayr', 'kilmarnock', 'troon', 'prestwick'];
  
  return cities.map((city) => ({
    params: { city },
  }));
}

const { city } = Astro.params;

// Capitalize first letter of city
const cityCapitalized = city ? city.charAt(0).toUpperCase() + city.slice(1) : '';

const title = `Gutter Cleaning Service ${cityCapitalized} | Expert Installation & Repair | Jimbo's Exterior Cleaning`;
const description = `Expert gutter cleaning service in ${cityCapitalized}, Ayrshire. Professional gutter cleaning, glass cleaning, window cleaning, power washing, and rooftop cleaning services.`;
const canonical = `/categories/gutter-cleaning-service/${city}`;
---

<Layout 
  title={title}
  description={description}
  canonical={canonical}
>
  <TooltipProvider client:load>
    <Toaster client:load />
    <Sonner client:load />
    <GutterCleaningServiceCategory city={cityCapitalized} client:load />
  </TooltipProvider>
</Layout>


