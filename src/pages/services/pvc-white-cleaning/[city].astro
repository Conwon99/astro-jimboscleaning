---
import Layout from '@/layouts/Layout.astro';
import PVCWhiteCleaningCity from './PVCWhiteCleaningCity';
import { Toaster } from '@/components/ui/toaster';
import { Toaster as Sonner } from '@/components/ui/sonner';
import { TooltipProvider } from '@/components/ui/tooltip';

export async function getStaticPaths() {
  const cities = ['irvine', 'ayr', 'kilmarnock', 'troon', 'prestwick'];
  
  return cities.map((city) => ({
    params: { city },
  }));
}

const { city } = Astro.params;
const cityCapitalized = city ? city.charAt(0).toUpperCase() + city.slice(1) : '';

const title = `PVC White Cleaning ${cityCapitalized} | Professional Service | Jimbo's Exterior Cleaning`;
const description = `Professional PVC white cleaning services in ${cityCapitalized}, Ayrshire. Restore the shine to your PVC fascias, soffits, and gutters.`;
const canonical = `/services/pvc-white-cleaning/${city}`;
---

<Layout title={title} description={description} canonical={canonical}>
  <TooltipProvider client:load>
    <Toaster client:load />
    <Sonner client:load />
    <PVCWhiteCleaningCity city={cityCapitalized} client:load />
  </TooltipProvider>
</Layout>


