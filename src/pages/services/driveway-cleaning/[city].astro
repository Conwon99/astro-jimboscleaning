---
import Layout from '@/layouts/Layout.astro';
import DrivewayCleaningCity from './DrivewayCleaningCity';
import { Toaster } from '@/components/ui/toaster';
import { Toaster as Sonner } from '@/components/ui/sonner';
import { TooltipProvider } from '@/components/ui/tooltip';

export async function getStaticPaths() {
  const cities = ['irvine', 'ayr', 'kilmarnock', 'troon', 'prestwick'];
  
  return cities.map((city) => ({
    params: { city },
  }));
}

const { city } = Astro.params;
const cityCapitalized = city ? city.charAt(0).toUpperCase() + city.slice(1) : '';

const title = `Driveway Cleaning ${cityCapitalized} | Professional & Reliable Service | Jimbo's Exterior Cleaning`;
const description = `Professional driveway cleaning services in ${cityCapitalized}, Ayrshire. Restore the look of your property's entrance with expert cleaning.`;
const canonical = `/services/driveway-cleaning/${city}`;
---

<Layout title={title} description={description} canonical={canonical}>
  <TooltipProvider client:load>
    <Toaster client:load />
    <Sonner client:load />
    <DrivewayCleaningCity city={cityCapitalized} client:load />
  </TooltipProvider>
</Layout>


